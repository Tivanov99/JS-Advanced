function PieceOfPie(input, FirstFavour, SeconFavour) {
    let IndexOfFirst = input.indexOf(FirstFavour);
    let IndexOfSecond = input.indexOf(SeconFavour);
    let Result = input.slice(IndexOfFirst, IndexOfSecond + 1);
    return Result;
}
PieceOfPie(['Pumpkin Pie',
        'Key Lime Pie',
        'Cherry Pie',
        'Lemon Meringue Pie',
        'Sugar Cream Pie'
    ],
    'Key Lime Pie',
    'Lemon Meringue Pie'
);
